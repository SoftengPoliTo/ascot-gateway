<div class="card">
    <header class="card-header has-background-success is-shadowless">
        <p class="card-header-title is-centered has-text-centered is-size-5-mobile">
            <font class="is-size-6-mobile">Fridge</font>
            <button class="info-icon" data-target="modal-fridge">
                <span class="icon has-text-white-bis is-size-6-mobile">
                    <i class="fas fa-info-circle" aria-hidden="true"></i>
                </span>
            </button>
        </p>
    </header>
    <div class="card-content has-text-centered">
       <div class="field is-grouped is-grouped-multiline is-grouped-centered">
           <p class="control">
               <button class="hazards" data-target="hazard-fire">
                   <span class="tag is-medium is-danger">
                       Fire Hazard
                   </span>
               </button>
           </p>
           <p class="control">
               <button class="hazards" data-target="hazard-energy">
                   <span class="tag is-medium is-warning">
                       Energy Consumption
                   </span>
               </button>
           </p>
        </div>

        <div class="field mt-6 is-grouped is-grouped-multiline is-grouped-centered">
            <p class="control">
              <button class="button is-rounded">Camera On</button>
            </p>
            <p class="control">
              <button class="button is-rounded is-danger is-selected">Camera Off</button>
            </p>
        </div>
    </div>
</div>
